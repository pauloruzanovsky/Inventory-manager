<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <title>Category List</title>
</head>
<body>
    <%- include('sidebar'); -%>
    <main>
    <h1><%=category.name%>s </h1>
    <p><%=category.description%></p>
    <ul>
        <%item_list.forEach(function(item) {%>
            <li><a href="/inventory/item/<%=item.id%>"> <%=item.name%> by <%=item.supplier.name%></a></li>
            <% }); %>
    </ul>   
    <p><a href="/inventory/category/<%=category.id%>/delete">Delete this category</a></p>
    <p><a href="/inventory/category/<%=category.id%>/update">Update this category</a></p>

    </main> 
</body>
</html>